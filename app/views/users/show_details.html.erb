<div class="row shadow">
  <div class="large-12 columns" role="content">
    <article>
      <h3>Profile <%= @showcase_user.name %> </h3>
      <div class="row">
        <div class="large-6 columns detail_image" >
          <%= image_tag @showcase_user.profile_image, width:"300px"%>
        </div>
        <div class="large-6 columns">
            <p>
              <%= @showcase_user.bio %>
              <br />
              <em>
                Cohort: <%= @showcase_user.cohort %>
              </em>
            </p>
            <ul>
              <li>
                <i class="fi-mail"></i>
                <%= @showcase_user.email %>
              </li>
              <li>
                <i class="fi-social-github"></i>
                <%= @showcase_user.github_username %>
              </li>
              <li>
                <i class="fi-social-twitter"></i>
                <%= @showcase_user.twitter %>
              </li>
              <li>
                <i class="fi-social-linkedin"></i>
                <%= @showcase_user.linkedin %>
              </li>
            </ul>
        </div>
      </div>
      <hr />
      <article>
      	<p>List of links, e.g. Github, edit profile, etc</p>
      </article>
      <hr />
      <p>and its details</p>
    </article>

    <% if current_user == @showcase_user %>
      <%= link_to 'Edit', edit_path %>
    <% end %>
  </div>
</div>



