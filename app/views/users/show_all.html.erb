
<div class="row shadow">
  <!-- Main Blog Content -->
  <h1>All Makers, graduates and current students</h1>
   <hr/>
    <% @users.each do |user| %>
        <div class="large-12 columns" >
        	<div class="large-3 columns" >
                <%= image_tag(user.profile_image) %>
            </div>
            <div class="large-9 columns" >
        		<h1><%= link_to user.name, show_details_path(user.github_username) %></h1>
        		<p><%= user.email %></p>
        	</div>
        </div>
        <hr/>
    <% end %>

</div>
