<div class="row shadow">
  <h1>All Makers, graduates and current students</h1>
  <input id="myButton1" class='button' onclick="javascript:change()" type='button' value="Show makers seeking work"></input>
  <hr/>
  <% @users.each do |user| %>
    <% available = user.seeking_work? ? 'available' : 'unavailable' %>
    <div class="large-12 columns <%=available%>" >
    	<div class="large-3 columns " >
        <%= link_to image_tag(user.profile_image), show_details_path(user.id) %>
      </div>
      <div class="large-9 columns" >
    		<h1><%= link_to user.name, show_details_path(user.github_username) %><small> <%= user.cohort %></small></h1>
        <p><%= user.bio %></p>
        <ul>
          <li><%= user.email %></li>
          <li><%= user.twitter %></li>
      	  <li><%= user.linkedin %></li>
        </ul>
    	</div>
    </div>
    <hr/>
  <% end %>
</div>
